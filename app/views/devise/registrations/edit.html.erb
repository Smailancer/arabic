<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                lable: 'اسم المستخدم',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }%>

    <%= f.input :age, lable: 'العمر'%>
    <%= f.input :gender, lable:'الجنس'%>
    <%= f.input :bio,lable: 'النبذة الشخصية'%>

    <%= f.input :email,lable: 'البريد الالكتروني' required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                lable: 'كلمة المرور',
                hint: "أتركه فارغا إذا لم تكن ترغب في تغييره",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                lable: 'تأكيد كلمة المرور',
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                lable: 'كلمة المرور الحالية'
                hint: "نحتاج كلمة المرور الحالية لتأكيد التغييرات التي قمت بها",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "تعديل" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>غير سعيد ؟ <%= link_to "إلغاء حسابي", registration_path(resource_name), data: { confirm: "هل أنت متأكد" }, method: :delete %></p>

<%= link_to "Back", :back %>
